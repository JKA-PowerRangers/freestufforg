<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button id="itemClose" ng-click="uploadComplete()" type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h2 class="modal-title" id="myModalLabel">Post Your Free Item</h2>
      </div>
      <div class="modal-body">
        <div ng-hide="formSubmission" id="formSubmission">

          <%= render 'angularform' %>

        </div>
        <div ng-show="fileUpload" id="image_upload">
          <p>Please upload an image of your item.</p>
          <div class="file-upload">
            <form action="/media_contents" id="media-dropzone" class="dropzone" enctype="multipart/form-data">
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
              <input name="item_id" type="hidden" value="{{ newItemId }}" />
              <div class="fallback">
                <input name="media" type="file" multiple />
             </div>
            </form>
          </div>
        </div>
        <div id="confirmation">
          <h2>Thanks!</h2>
          <p>Please check your email (the one you used to post the item!).</p>
          <p>To confirm your free item listing, please check your email.</p>
          <p>You will receive communications from the claimants through our email server.</p>
        </div>
      </div>
      </div>
    </div>
  </div>