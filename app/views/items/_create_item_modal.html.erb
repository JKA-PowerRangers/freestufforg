<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button id="close_modal" ng-click="uploadComplete()" type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h2 class="modal-title" id="myModalLabel">Post Your Free Item</h2>
      </div>
      <div class="modal-body">
        <div id="formSubmission">

          <%= render 'angularform' %>

        </div>
        <div id="image_upload">
          <div class="file-upload">
            <form action="/media_contents" id="media-dropzone" class="dropzone" enctype="multipart/form-data">
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
              <input name="item_id" type="hidden" value="{{ newItemId }}" />
              <div class="fallback">
                <input name="media" type="file" multiple />
             </div>
            </form>
          </div>
        </div>
        <div id="confirmation">
          <h3>Thanks!</h3>
          <p>Your item has been posted. Please click away from this box to close this window.</p>
        </div>
      </div>
      </div>
    </div>
  </div>