<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>
<div class="btn btn-danger" ng-click="dismissDropzone()" ng-show="selectedItemId">Dismiss</div>

<div class="file-upload" ng-show="selectedItemId">
  <form action="/media-upload" class="dropzone">
    <div class="fallback">
      <input name="file" type="file" />
    </div>
  </form>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Description</th>
      <th>Expiry date</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody id="items">
    <tr ng-repeat="item in itemList">
      <td>{{ item.title }} </td>
      <td>{{ item.location }}</td>
      <td>{{ item.description }}</td>
      <td>{{ item.expiry_date }}</td>
      <td><div class="btn btn-success" ng-click="showDropzone(item.id)">Upload</div></td>
    </tr>
  </tbody>
</table>

<button id="resetModal" type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  List Item
</button>

<%= render 'create_item_modal' %>

</div>


