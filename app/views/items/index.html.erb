
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div ng-repeat="item in itemList | filter:location">
            <div ng-repeat="medium in item.media">
              <div class="col-md-6">
                <div class="thumbnail" ng-click="updateCurrentItem(item)">
                  <img class="list-image" ng-src="{{ medium.file_name.url }}" />
                  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default">
                      <div class="panel-heading" role="tab">
                        <h4 class="panel-title">
                          <a data-toggle="collapse" data-parent="#accordion" href="#collapse{{ item.id }}" aria-expanded="true" aria-controls="collapse{{ item.id }}">
                            {{ item.title }}
                          </a>
                        </h4>

                      </div>
                      <!-- <div id="collapse{{ item.id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{ item.id }}">
                        <div class="panel-body">
                          {{ item.description }} - in {{ item.location }}
                        </div>
                      </div> -->
                      <div id="remaining-time">In {{ item.location }} with {{ item.remaining_days }}</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Second half of page -->
      <div class="col-md-6" id="itemDescriptionContainer">
        <h2>{{ currentItem.title }}</h2>
        <p>Located in {{ currentItem.location }}
        <p>{{ currentItem.description }}
        <div class="btn btn-default" type="button" data-toggle="modal" data-target="#contactSeller" ng-click="getContact(item)">Get This Item</div>

      </div>
    </div>
  </div>

<%= render 'create_item_modal' %>
<%= render 'contact_seller_modal' %>

</div>


